@model MiProyecto.Models.Pack
@{
    ViewData["Title"] = "Editar Pack";
    var nombresPermitidos = ViewBag.NombresPermitidos as string[];
}

<h2>Editar Pack</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdPack" />
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <select asp-for="Nombre" class="form-control">
            @foreach (var nombre in nombresPermitidos)
            {
                <option value="@nombre" selected="@(nombre == Model.Nombre)">@nombre</option>
            }
        </select>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" min="1" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCartas">Total Cartas</label>
        <input asp-for="TotalCartas" class="form-control" type="number" min="1" />
        <span asp-validation-for="TotalCartas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RaraChance">Rara Chance</label>
        <input asp-for="RaraChance" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="RaraChance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EpicaChance">Epica Chance</label>
        <input asp-for="EpicaChance" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="EpicaChance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LegendariaChance">Legendaria Chance</label>
        <input asp-for="LegendariaChance" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="LegendariaChance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RaraGar">Rara Garantizadas</label>
        <input asp-for="RaraGar" class="form-control" type="number" min="0" />
        <span asp-validation-for="RaraGar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EpicaGar">Epica Garantizadas</label>
        <input asp-for="EpicaGar" class="form-control" type="number" min="0" />
        <span asp-validation-for="EpicaGar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LegGar">Legendaria Garantizadas</label>
        <input asp-for="LegGar" class="form-control" type="number" min="0" />
        <span asp-validation-for="LegGar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Leyenda">Leyenda</label>
        <input asp-for="Leyenda" class="form-control" />
        <span asp-validation-for="Leyenda" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Imagen Actual</label>
        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <img src="@Model.Imagen" alt="@Model.Nombre" style="max-width: 100px;" />
            <div class="form-check">
                <input type="checkbox" name="EliminarImagen" id="EliminarImagen" class="form-check-input" />
                <label class="form-check-label" for="EliminarImagen">Eliminar Imagen</label>
            </div>
        }
        else
        {
            <p>Sin imagen</p>
        }
    </div>
    <div class="form-group">
        <label asp-for="ImagenFile">Nueva Imagen</label>
        <input asp-for="ImagenFile" type="file" accept="image/*" class="form-control-file" data-val="false"/>
        <span asp-validation-for="ImagenFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}