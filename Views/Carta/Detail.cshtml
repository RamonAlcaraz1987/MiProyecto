@model MiProyecto.Models.Carta

@{
    ViewData["Title"] = "Detalle Carta";
    var rnd = new Random();
   
}


<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Nombre
            </dt>
            <dd class="col-sm-8">
                @Model.Nombre
            </dd>
            <dt class="col-sm-4">
                Categoría
            </dt>
            <dd class="col-sm-8">
                @Model.Categoria.Nombre
            </dd>
            <dt class="col-sm-4">
                Tipo Principal
            </dt>
            <dd class="col-sm-8">
                @Model.Tipo1.Descripcion
            </dd>
            <dt class="col-sm-4">
                Tipo Secundario
            </dt>
            <dd class="col-sm-8">
                @Model.Tipo2.Descripcion
            </dd>
            <dt class="col-sm-4">
                Precio
            </dt>
            <dd class="col-sm-8">
                @Model.ValorEstimado
            </dd>
            
            <dt class="col-sm-4">
                Estado
            </dt>
            <dd class="col-sm-8">
                @if(Model.Estado == 1) { <text>Activa</text> } else { <text>Desactivada</text> } 
            </dd>
        </dl>
        <a class=" btn btn-secondary" asp-action="Index" asp-route-pagina="@ViewBag.PaginaActual">Volver</a>
    </div>
    

    <div class="col-md-6 d-flex align-items-start justify-content-center">
        <div class="text-center">
            <dt>Imagen</dt>
                <dd>
                    @if(!String.IsNullOrEmpty(Model.Imagen))
                    {

                        var x = Model.Imagen + "?" + rnd.Next();
                        <img src="@x" class="pokemon-card img-fluid" alt="Carta de Pokémon" style="width: 400px; height: 560px;" />
                    }
                    else
                    {
                        <div class="text-center">
                            <span class="badge bg-danger">Sin Imagen</span>
                        </div>
                    }
                </dd>
        </div>
    </div>
</div>